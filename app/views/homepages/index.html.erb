<% elsif current_user.user_type == 3 %>


<h1 class="text-center">Welcome, Chef <%= current_user.fname%> <%= current_user.lname%></h1>

<br/>
<br/>

<table class="table table-bordered table-striped">
	<tbody>
		<tr>
			<td class="col-md-1">
