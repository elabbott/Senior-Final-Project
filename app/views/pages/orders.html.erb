<header>
	<%= render 'layouts/navigation' %>
</header>

<h1>Orders submitted by <%= current_user.fname%> <%= current_user.lname %>: </h1>

<br/>
<br/>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Child Name</th>
			<th>Order Price</th>
			<th>Meal Ordered</th>
			<th>Payment Type</th>
			<th>Created at</th>
			<th>View</th>
		</tr>
	</thead>
	<tbody>
		<% Order.where(:parent_id => current_user.id).each do |o| %>
			<% Child.where(:id => o.child_id).each do |c| %>
			<% Meal.where(:price => o.price).each do |m| %>
			<tr>
				<td><%= c.name %></td>
				<td><%= o.price%></td>
				<td><%= m.name %></td>
				<td><%= o.pay_type%></td>
				<td><%= o.created_at%>
				<td><%= button_to 'View', o, :method => :get, :class => "btn btn-success btn-block"%></td></td>
			</tr>
		<% end %>
		<% end %>
		<% end %>
	</tbody>
</table>
