<header>
	<%= render 'layouts/navigation' %>
</header>

<h1>Feedback submitted by <%= current_user.fname%> <%= current_user.lname %>: </h1>

<br/>
<br/>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Order Price</th>
			<th>See/Leave Feedback</th>
		</tr>
	</thead>
	<tbody>
		<% Order.where(:parent_id => current_user.id).each do |order| %>
		<tr>
			<td><%= order.price %></td>
			<%if order.feedback_flag == nil || order.feedback_flag == "false"%>
			<td><%= button_to "Leave Feedback", feedback_path(order.id), :method => :get%></td>
			<%else%>
			<td><%= order.feedback%></td>
			<%end%>
			<% end %>
		</tr>
		
	</tbody>
</table>
