<header>
	<%= render 'layouts/navigation' %>
</header>

<% if current_user.user_type == 2 %>

<h1>Feedback submitted by <%= current_user.fname%> <%= current_user.lname %>: </h1>

<br/>
<br/>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Meal Name</th>
			<th>Price</th>
			<th>See/Leave Feedback</th>
		</tr>
	</thead>
	<tbody>
		<% Order.where(:parent_id => current_user.id).each do |order| %>
		<%Meal.where(:price => order.price).each do |meal| %>
		<tr>
			<td><%= meal.name %></td>
			<td><%= order.price %></td>
			<%if order.feedback_flag == nil || order.feedback_flag == "false"%>
			<td><%= button_to "Leave Feedback", feedback_path(order.id), :method => :get, class: "btn btn-success" %></td>
			<%else%>
			<td><%= order.feedback%></td>
			<%end%>
			<% end %>
			<% end %>
		</tr>
		
	</tbody>
</table>

<% elsif current_user.user_type == 3%>

	<h1 class="text-center">Feedback for Meals Served:</h1>
	
	<br/>
	<br/>
	
	<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Meal</th>
			<th>Feedback</th>
		</tr>
	</thead>
	<tbody>
		<% Order.where(:feedback_flag => true ).each do |order| %>
			<% Meal.where(:price => order.price).each do |meal| %>
				<tr>
					<td><%= meal.name %></td>
					<td><%= order.feedback %></td>
				</tr>
			<% end %>
		<% end %>
	</tbody>
</table>

<% end %>
