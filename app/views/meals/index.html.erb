<style>
	.list_image {
		width: 60px;
		height: 70px;
	}
</style>

<header>
	<%= render 'layouts/navigation' %>
</header>

<h1>Listing meals</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Calories</th>
      <th>Price</th>
      <th>Image</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.description %></td>
        <td><%= meal.calories %></td>
        <td><%= meal.price %></td>
        <td><%= image_tag(meal.image_url, class: 'list_image')%></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %>
<%= link_to 'Back', authenticated_root_path, :class => "btn btn-success" %>