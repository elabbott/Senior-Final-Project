
<header>
	<%= render 'layouts/navigation' %>
</header>
<%= form_tag(process_add_meal_to_child_path) do%>
<h1>Make meal selections for <%=Child.find_by_id(params[:id]).name%></h1>
<table class="table table-striped table-bordered">
	<%=hidden_field_tag 'child', Child.find_by_id(params[:id]).id%>
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Calories</th>
			<th>Select</th>
		</tr>
	</thead>
	<tbody>
		<% @meals.each do |meal| %>

		<tr>
			<td><%= meal.name %></td>
			<td><%= meal.description%></td>
			<td><%= meal.price %></td>
			<td><%= meal.calories %></td>
			<td><%= radio_button_tag 'meals[meal_id][]', meal.id, false %></td>

		</tr>
		<% end %>
	</tbody>
</table>

<%= submit_tag 'Submit' %>

<%end%>
