<style>
	.list_image {
		width: 60px;
		height: 70px;
	}
</style>

<header>
	<%= render 'layouts/navigation' %>
</header>
<%= form_tag(process_add_meal_to_child_path) do%>
<h1>Make meal selections for <%=Child.find_by_id(params[:id]).name%></h1>
<br/>
<table class="table table-striped table-bordered">
	<%=hidden_field_tag 'child', Child.find_by_id(params[:id]).id%>
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
			<th>Price</th>
			<th>Calories</th>
			<th>Image</th>
			<th>Select</th>
		</tr>
	</thead>
	<tbody>
		<% Meal.all.each do |meal| %>

		<tr>
			<td><%= meal.name %></td>
			<td><%= meal.description%></td>
			<td><%= meal.price %></td>
			<td><%= meal.calories %></td>
			<td><%= image_tag(meal.image_url, class: 'list_image')%></td>
			<td><%= check_box_tag 'meals[meal_id][]', meal.id, false, :class => "hue" %></td>
		</tr>
		<% end %>
		  <%= hidden_field_tag 'child_id', Child.find_by_id(params[:id]).id%>

	</tbody>
</table>


<%= submit_tag 'Submit', class: 'btn btn-success'%>

<%end%>
